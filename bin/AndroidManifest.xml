<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.bde_forum"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk  android:minSdkVersion="7"
        android:targetSdkVersion="8"
        />
    
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/banniere"
        android:label="@string/app_name" >
        <receiver
            android:name=".WidgetBdeInfoForum"
            android:icon="@drawable/banniere"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="android.bde_forum.AppWidget.action.OPEN_TUTO" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/appwidgetproviderinfo" />
        </receiver>
        <activity
            android:name="android.bde_forum.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="android.bde_forum.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="android.bde_forum.Categorie"/>
        <activity
            android:name="android.bde_forum.Threads"/>
        <activity
            android:name="android.bde_forum.Posts"/>
        <activity
            android:name="android.bde_forum.Pref"/>
    </application>

</manifest>