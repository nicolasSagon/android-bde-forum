<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shapewidget"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/mpWidget"
        android:layout_width="216dip"
        android:layout_height="109dip"
        android:text="@string/mpWidget"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/precedentW"
            android:layout_width="fill_parent"
			android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="36"
            android:background="@drawable/shapebuttonwidget"
            android:gravity="center"
            android:text="@string/precedentWi"
            android:textColor="@color/white" />
        
        <TextView
            android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="36"
            />

        <Button
            android:id="@+id/suivantW"
            android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="36"
            android:background="@drawable/shapebuttonwidget"
            android:gravity="center"
            android:text="@string/suivantWi"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>