<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/shapewidget"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/mpWidget"
        android:layout_width="fill_parent"
        android:layout_height="109dip"
        android:text="@string/mpWidget"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="35dip"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/precedentW"
            android:layout_width="90dip"
            android:layout_height="28dip"
            android:text="@string/precedentWi"
            android:textColor="@color/white"
            android:background="@drawable/shapebuttonwidget" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="35dip" />

        <Button
            android:id="@+id/suivantW"
            android:layout_width="90dip"
            android:layout_height="28dip"
            android:text="@string/suivantWi"
            android:textColor="@color/white"
            android:background="@drawable/shapebuttonwidget" />
    </LinearLayout>

</LinearLayout>